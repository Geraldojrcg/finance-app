generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  email     String    @unique
  name      String?
  password  String
  articles  Article[] @relation("UserAticles")
}

model Article {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  body      String
  image     String?
  readed    Boolean  @default(false)
  User      User?    @relation("UserAticles", fields: [userId], references: [id])
  userId    Int?
}
